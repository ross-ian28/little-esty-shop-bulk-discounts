<h1>Edit Discount</h1>
<div id="edit-discount">
  <%= form_with url: merchant_discount_path(@discount.merchant, @discount), method: :patch, local: true do |f| %>
    <%= f.label :percentage_discount %>
    <%= f.text_field :percentage_discount, :value => @discount.percentage_discount %><br><br>

    <%= f.label :quantity_threshold %>
    <%= f.text_field :quantity_threshold, :value => @discount.quantity_threshold %><br><br>

    <%= f.submit "Submit" %>
  <% end %>
</div>
